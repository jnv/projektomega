= simple_form_for resource do |f|
  .form-inputs
    = f.input :number, disabled: disable_flag
    = f.input :name
    = f.input :born #TODO change to number
    = f.input :country, :as => :string
    = f.input :assignment
    = f.input :specialisation
    = f.input :portrait, :as => :file
    = f.input :user if can? :update, @character, :user
  .form-actions
    = f.button :submit
