<h1>Listing characters</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Born</th>
    <th>Country</th>
    <th>Assignment</th>
    <th>Specialisation</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @characters.each do |character| %>
  <tr>
    <td><%= character.name %></td>
    <td><%= character.born %></td>
    <td><%= character.country %></td>
    <td><%= character.assignment %></td>
    <td><%= character.specialisation %></td>
    <td><%= link_to 'Show', character %></td>
    <td><%= link_to 'Edit', edit_character_path(character) %></td>
    <td><%= link_to 'Destroy', character, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

