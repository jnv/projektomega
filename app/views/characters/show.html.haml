%h2= @character


.character_details

  = image_tag @character.portrait.to_s, class: "portrait" if @character.portrait?

  %dl
    %dt Číslo
    %dd= @character.number
    %dt Jméno
    %dd= @character.name
    %dt Rok narození
    %dd= @character.born
    %dt Země
    %dd= @character.country
    %dt Zařazení
    %dd= @character.assignment
    %dt Specializace
    %dd= @character.specialisation
    %dt Hráč
    %dd= @character.user

%h3 Účast v misích

%table#missions
  %tr
    %th Mise
    %th Zúčastnění agenti

  - @character.missions.each do |mission|
    %tr[mission]
      %td= link_to(mission.full_name, mission)
      %td= linked_codes(mission.characters, @character)

%h3 Hlášení
%ul#reports
  = render partial: "report", collection: @character.attendances, as: :attendance

#evaluations
  %h3 Hodnocení agentů
  = render partial: "shared/evaluations", collection: @character.attendances_with_evaluations, as: :attendance, locals: {title: :mission}

.meta_links
  -if can? :update, @character
    = link_to 'Upravit agenta', edit_character_path(@character)
    \|
  = link_to 'Přehled agentů', characters_path
