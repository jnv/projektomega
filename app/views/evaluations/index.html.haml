%table#evaluations.sortable
  %thead
    %tr
      %th Mise
      %th Autor hodnocení
      %th Hodnocený agent
      %th Hodnocení
      =render 'shared/action_grid_headers'
  %tbody
    - collection.each do |evaluation|
      %tr[evaluation]
        %td= linked_name evaluation.mission
        %td= linked_name evaluation.author
        %td= linked_name evaluation.character
        %td= link_to 'Zobrazit', evaluation
        =render partial: 'shared/action_grid_row', locals: {resource: evaluation}

.meta_links
  -#if can? :create, :evaluations
    =# link_to 'Nové hodnocení', new_evaluation_path
